<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_interface" >

    <LinearLayout
        android:id="@+id/badgeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="2" >

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/expenseImage1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_background" />

            <ImageView
                android:id="@+id/gridPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_mask" />

        </RelativeLayout>

        <TextView
            android:id="@+id/gridTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="Nothing Tracked"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
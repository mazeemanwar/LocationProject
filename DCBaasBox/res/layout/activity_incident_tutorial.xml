<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_interface"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tutorialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorialIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Incident Report"
            android:textColor="?attr/tutorial_font_color"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tutorialText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tutorialTitle"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Please complete the following steps to create and submit an incident report. This should be carried out as soon after the incident as possible."
            android:textColor="?attr/tutorial_font_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/tutorialIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="94dp"
            android:scaleType="centerInside"
            android:src="@drawable/document_icon_03" />

    </RelativeLayout>
</RelativeLayout>
